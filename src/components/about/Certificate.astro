---
import { certificateData } from '../../data/about';
---

<section>
    <h2 class="section-title">Certificate</h2>
    <br />
    <div class="content">
        <div class="certificate-item">
            <h3>국가기술자격</h3>
            <ul>
                {certificateData.national.map(cert => (
                    <li>
                        {cert.title} ({cert.date})
                        <br />
                        <a href={cert.link} target="_blank" rel="noopener">View Certificate</a>
                    </li>
                ))}
            </ul>
        </div>
        <div class="certificate-item">
            <h3>민간자격</h3>
            <ul>
                {certificateData.private.map(cert => (
                    <li>
                        {cert.title} ({cert.date})
                        <br />
                        <a href={cert.link} target="_blank" rel="noopener">View Certificate</a>
                    </li>
                ))}
            </ul>
        </div>
    </div>
</section>

<style>
    .section-title {
        grid-column-start: 1;
        font-size: var(--text-xl);
        color: var(--gray-0);
    }

    .content {
        grid-column: 2 / 4;
    }

    .certificate-item {
        margin-bottom: 2rem;
    }

    .certificate-item h3 {
        color: var(--gray-0);
        font-size: var(--text-lg);
        margin-bottom: 1rem;
    }

    ul {
        list-style: disc;
        padding-left: 1.5rem;
    }

    li {
        color: var(--gray-300);
        font-size: var(--text-sm);
        margin-bottom: 0.5rem;
    }

    a {
        color: var(--accent-regular);
        text-decoration: none;
        font-size: var(--text-sm);
    }

    a:hover {
        text-decoration: underline;
    }
</style> 
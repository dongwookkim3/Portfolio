---
import { educationData } from '../../data/about';
---

<section>
  <h2 class="section-title">Education</h2>
  <br />
  <div class="content">
    {educationData.map(edu => (
      <div class="education-item" key={edu.school}>
        {/* 학교명은 제목으로 */}
        <h3>{edu.school}</h3>

        {/* 기간·학과(·수료증 링크)는 bullet 리스트로 */}
        <ul class="education-details">
          <li>{edu.period}</li>
          {edu.department && <li>{edu.department}</li>}
          {(edu.certificate_pdf_ko || edu.certificate_pdf_en || edu.certificate_web) && (
            <li>
              <div class="certificate-links">
                {edu.certificate_pdf_ko && (
                  <a href={edu.certificate_pdf_ko} target="_blank" rel="noopener">
                    View Certificate (KO)
                  </a>
                )}
                {edu.certificate_pdf_en && (
                  <a href={edu.certificate_pdf_en} target="_blank" rel="noopener">
                    View Certificate (EN)
                  </a>
                )}
                {edu.certificate_web && (
                  <a href={edu.certificate_web} target="_blank" rel="noopener">
                    View Certificate (Web)
                  </a>
                )}
              </div>
            </li>
          )}
        </ul>
      </div>
    ))}
  </div>
</section>

<style>
  .section-title {
    grid-column-start: 1;
    font-size: var(--text-xl);
    color: var(--gray-0);
  }

  .content {
    grid-column: 2 / 4;
  }

  .education-item {
    margin-bottom: 2rem;
  }

  .education-item h3 {
    color: var(--gray-0);
    font-size: var(--text-lg);
    margin-bottom: 0.5rem;
  }

  /* detail 리스트에 disc bullet 적용 및 확실하게 표시 */
  .education-details {
    list-style: disc;
    padding-left: 1.5rem;
    margin-top: 0.5rem;
  }

  .education-details li {
    color: var(--gray-300);
    font-size: var(--text-sm);
    margin-bottom: 0.5rem;
    display: list-item; /* 명시적으로 list-item으로 표시 */
  }

  .certificate-links {
    display: flex;
    gap: 1rem;
    flex-wrap: wrap;
    margin-top: 0.25rem;
  }

  .certificate-links a {
    color: var(--accent-regular);
    text-decoration: none;
    font-size: var(--text-sm);
  }

  .certificate-links a:hover {
    text-decoration: underline;
  }
</style>